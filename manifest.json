{
  
  "name": "Solid Focus",
  "description": "Help focus on tasks and measure time for a task",
  "version": "0.1",

  "chrome_url_overrides": {
    "newtab": "newProductivityTab.html"
  },

  "manifest_version": 2,
  "permissions":[  "identity",
                  "identity.email",
                  "tabs","background", 
                  "tts","alarms", 
                  "storage", "https://quotes.rest/*", "https://chrometimertasks-879e.restdb.io/*"],
  "background": { "scripts": ["scripts/common.js",  "scripts/backgroundFocusTimer.js","scripts/background.js"] },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/icon16.png",
      "32": "/images/icon32.png",
      "48": "/images/icon48.png",
      "128": "/images/icon128.png"
    }
  },
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  }

}
